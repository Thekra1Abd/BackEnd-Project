            alert('Last Name is required');
            return false;
        }

        if (email.trim() === '') {
            alert('Email is required');
            return false;
        }

        if (telephone.trim() === '') {
        alert('Telephone is required');
        return false;
    } else if (!isValidPhoneNumber(telephone)) {
        alert('Please enter a valid 10-digit telephone number');
        return false;
    }

        if (age.trim() === '') {
            alert('Age is required');
            return false;
        }

        if (country === null || country === 'Choose here ...') {
            alert('Please select a Country');
            return false;
        }

        if (gender === "Choose here ..." || gender === null) {
