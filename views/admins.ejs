<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="./js/color-modes.js"></script>
  <link rel="stylesheet" href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css" />
  <link rel="shortcut icon" href="./img/ali.png" type="image/x-icon">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors" />
  <meta name="generator" content="Hugo 0.112.5" />
  <title>Home page</title>

  <link href="./css/bootstrap.min.css" rel="stylesheet" />

  <link rel="stylesheet" href="./css/dark-light.css">

  <!-- Custom styles for this template -->
  <link href="./css/sidebars.css" rel="stylesheet" />
  <link href="./css/sidebars.css" rel="stylesheet" />
  <link rel="stylesheet" href="./css/myStyle.css" />

</head>

<body>

  <%- include('./Components/dark-light.ejs') %>

    <main class="d-flex flex-nowrap">

      <%- include('./Components/sidebar.ejs', {currentPage: "index" }) %>

        <section class="w-100">

          <%- include('./Components/navbar.ejs') %>

            <% if (arr.length===0) { %>
              <h1 style="text-align: center; margin-top: 4rem;"> No Data Available!</h1>
              <% } %>
              <div class="row p-2">
                <% if (arr.length>0) { %>
                    <% arr.forEach((item, index )=> { %>
                <div class="col-md-3">
                   
    
                    <div class="card align-items-center py-1" style="width: 15rem;">
                        <img src="../img/admin.jpg" class="card-img-top rounded-circle" style="width: 100px; height: 100px;" alt="...">
                        <div class="card-body">
                            <h5 class="card-title center ms-2"><%= item.UserName %></h5>
                            <h6 class="card-text"><%= item.Email %></h6>
                        </div>
                    </div>
                    
                         
                </div>
                <% }) %>
                <% } %>
              </div>

              

        </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
</body>

</html>